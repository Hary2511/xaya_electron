{
  "productName": "angular-electron",
  "npmSkipBuildFromSource" : "true",
  "directories": {
    "output": "app-builds"
  },
  "win": {
    "icon": "dist",
    "target": [
      "portable"
    ]
  },
  "mac": {
    "icon": "dist",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "dist",
    "target": [
      "AppImage"
    ]
  },
  "files": [
	  "!node_modules/zeromq/build/Release",
  ],  
  "extraResources": [
      "daemon/chimaerad.exe",
	  "daemon/shell.vbs",
	  "daemon/chim.bat",
	  "node_modules/zeromq/build/Release/*.node"
    ] 
}
